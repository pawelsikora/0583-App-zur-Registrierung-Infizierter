{% extends "layout.jinja2" %}
{% block content %}
<table class="table table-striped" id="example">
    <thead>
    <tr>

        <th>Vorname</th>
        <th>Nachname</th>
        <th>Fallnummer</th>
        <th>Email</th>
        <th>Telefonnummer</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>


    </tbody>


</table>

<script>$(document).ready(function () {
    $('#example').DataTable({
        "ajax": '/admin_json',
        "columns": [
            {
                "data": "first_name", fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                    $(nTd).html("<a href='/admin/edit?id=" + oData.id + "'>" + oData.first_name + "</a>");
                }
            },
            {"data": "last_name"},
            {"data": "case_number"},
            {"data": "email"},
            {"data": "phone_number"},
            {"data": "covid_status"}
        ],
        render: function (data, type, row, meta) {
            console.log(type);
            if (type === 'firstname') {
                data = '<a href="FormToEdit.php?everything=' + encodeURIComponent(data) + '">Edit</a>';
            }
            return data;
        }
    });
});
</script>
{% endblock content %}

